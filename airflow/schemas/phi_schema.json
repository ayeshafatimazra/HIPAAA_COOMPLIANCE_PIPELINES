{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PHI Data Schema",
  "description": "Schema for validating patient health information data",
  "type": "object",
  "properties": {
    "patient_id": {
      "type": "string",
      "pattern": "^[A-Z0-9]{8,16}$",
      "description": "Unique patient identifier"
    },
    "encounter_date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Date of patient encounter in YYYY-MM-DD format"
    },
    "ssn": {
      "type": "string",
      "pattern": "^\\d{3}-\\d{2}-\\d{4}$",
      "description": "Social Security Number in XXX-XX-XXXX format"
    },
    "first_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "description": "Patient first name"
    },
    "last_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "description": "Patient last name"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Patient email address"
    },
    "phone": {
      "type": "string",
      "pattern": "^\\+?1?\\d{10}$",
      "description": "Phone number in 10-digit format"
    },
    "address": {
      "type": "string",
      "minLength": 10,
      "maxLength": 200,
      "description": "Patient address"
    },
    "date_of_birth": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Date of birth in YYYY-MM-DD format"
    },
    "diagnosis_code": {
      "type": "string",
      "pattern": "^[A-Z]\\d{2}\\.\\d{1,2}$",
      "description": "ICD-10 diagnosis code"
    },
    "procedure_code": {
      "type": "string",
      "pattern": "^\\d{5}$",
      "description": "CPT procedure code"
    },
    "provider_id": {
      "type": "string",
      "pattern": "^[A-Z0-9]{6,12}$",
      "description": "Healthcare provider identifier"
    },
    "facility_id": {
      "type": "string",
      "pattern": "^[A-Z0-9]{4,10}$",
      "description": "Healthcare facility identifier"
    },
    "insurance_id": {
      "type": "string",
      "pattern": "^[A-Z0-9]{8,16}$",
      "description": "Insurance policy identifier"
    },
    "amount": {
      "type": "number",
      "minimum": 0,
      "description": "Billing amount"
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive", "pending", "completed"],
      "description": "Record status"
    }
  },
  "required": [
    "patient_id",
    "encounter_date",
    "first_name",
    "last_name",
    "diagnosis_code"
  ],
  "additionalProperties": false
} 